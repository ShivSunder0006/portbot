# ================= Backend =================
FROM python:3.10-slim AS backend

WORKDIR /app

# Install backend deps
COPY server/requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

COPY server ./server

# ================= Frontend =================
FROM node:18 AS frontend

WORKDIR /frontend
# Copy root-level React app (src, public, package.json)
COPY package.json package-lock.json* ./
COPY src ./src
COPY public ./public

RUN npm install && npm run build

# ================= Final App =================
FROM python:3.10-slim

WORKDIR /app

# Copy backend with deps from backend stage
COPY --from=backend /app /app

# Install FastAPI runtime
RUN pip install fastapi uvicorn python-multipart

# Copy built React app into backend static folder
COPY --from=frontend /frontend/build ./server/frontend

EXPOSE 8000

CMD ["uvicorn", "server.app:app", "--host", "0.0.0.0", "--port", "8000"]
